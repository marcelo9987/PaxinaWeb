  aria-label="FPGA"
>
  <!-- Fondo do chip -->
  <rect x="10" y="10" width="80" height="80" rx="3" fill="#1a1a2e" stroke="#0f3460" stroke-width="2"/>
  
  <!-- Pins superiores -->
  <rect x="15" y="5" width="3" height="8" fill="#2d3561"/>
