  <rect x="5" y="25" width="8" height="3" fill="#2d3561"/>
  <rect x="5" y="35" width="8" height="3" fill="#2d3561"/>
  <rect x="5" y="45" width="8" height="3" fill="#2d3561"/>
  <rect x="5" y="55" width="8" height="3" fill="#2d3561"/>
  <rect x="5" y="65" width="8" height="3" fill="#2d3561"/>
  <rect x="5" y="75" width="8" height="3" fill="#2d3561"/>
  <rect x="5" y="85" width="8" height="3" fill="#2d3561"/>
  
