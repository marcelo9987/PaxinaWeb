  <rect x="85" y="5" width="3" height="8" fill="#2d3561"/>
  
  <!-- Pins inferiores -->
  <rect x="15" y="87" width="3" height="8" fill="#2d3561"/>
  <rect x="25" y="87" width="3" height="8" fill="#2d3561"/>
