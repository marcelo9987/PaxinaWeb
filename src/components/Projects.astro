---
import { projects } from '../data/projects';
import { translations, type Locale } from '../i18n/translations';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = translations[locale];

const getProjectDescription = (project: typeof projects[0]) => {
  if (locale === 'en') //Inglés
  {
      return project.descriptionEn;
  }
  else if (locale === 'pt') //Portugés
  {
      return project.descriptionPt;
  }
  else if (locale === 'es') // Hespañol
  {
      return project.descriptionEs;
  }


  return project.description;
};
---

<section id="projects" class="py-20 bg-white dark:bg-slate-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-slate-900 dark:text-white">
        {t.projects.title}
      </h2>
      <p class="text-xl text-slate-600 dark:text-slate-400">
        {t.projects.subtitle}
      </p>
    </div>

    {projects.length === 0 ? (
      <div class="text-center py-12">
        <div class="bg-black border-2 border-green-500/50 rounded-lg p-8 max-w-2xl mx-auto shadow-[0_0_30px_rgba(0,255,0,0.3)]">
          <div class="text-green-400 font-mono text-lg mb-4">
            <span class="text-green-500">$</span> ls projects/
          </div>
          <div class="text-green-300 font-mono text-xl animate-pulse">
            {locale === 'gl' && 'Os proxectos chegarán pronto...'}
            {locale === 'es' && 'Los proyectos llegarán pronto...'}
            {locale === 'en' && 'Projects coming soon...'}
            {locale === 'pt' && 'Projetos em breve...'}
          </div>
          <div class="text-green-500 font-mono mt-4">
            <span class="text-green-500">$</span> <span class="animate-pulse">_</span>
          </div>
        </div>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <div class="bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-700 dark:to-slate-800 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-slate-200 dark:border-slate-600">
            {project.image && (
              <div class="h-48 bg-gradient-to-br from-blue-400 to-indigo-500 flex items-center justify-center">
                <img src={project.image} alt={project.title} class="w-full h-full object-cover" />
              </div>
            )}
            <div class="p-6">
              <h3 class="text-2xl font-bold text-slate-900 dark:text-white mb-2">
                {project.title}
              </h3>
              <p class="text-slate-600 dark:text-slate-400 mb-4">
                {getProjectDescription(project)}
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies.map((tech) => (
                  <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 text-sm rounded-full">
                    {tech}
                  </span>
                ))}
              </div>
              <div class="flex space-x-4">
                {project.liveUrl && (
                  <a
                    href={project.liveUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
                  >
                    {t.projects.viewProject}
                  </a>
                )}
                {project.githubUrl && (
                  <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="px-4 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition-colors font-medium"
                  >
                    {t.projects.viewCode}
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</section>

